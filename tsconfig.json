{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "types": [
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./index.ts",
    "./lib/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
